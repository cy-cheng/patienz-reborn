<div class="entry-container">
  <div class="entry-card">
    <h1>虛擬病患問診系統</h1>
    <p class="subtitle">請選擇一位病患並開始您的問診</p>

    <%= form_with url: entry_page_path, method: :post, local: true do |f| %>
      <div class="form-group">
        <label for="username">醫師姓名</label>
        <%= f.text_field :username, placeholder: "請輸入您的姓名", class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="patient_id">選擇病患科別</label>
        <%= f.select :patient_id, 
          {
            "心臟科" => "cardio_patient_1",
            "神經科" => "neuro_patient_1",
            "腸胃科" => "gastro_patient_1",
            "骨科" => "ortho_patient_1",
            "胸腔科" => "pulmo_patient_1"
          },
          { prompt: "請選擇一位病患..." },
          class: "form-control"
        %>
      </div>

      <div class="form-actions">
        <%= f.submit "開始問診", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
